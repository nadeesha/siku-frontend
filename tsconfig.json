{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "typeRoots": [
      "custom-types/**/*"
    ],
    "types": [
      "node"
    ],
    "lib": ["es2017", "dom"],
    "allowJs": true
  },
  "include": [
    "./src/**/*",
    "custom-types/**/*"
  ]
}